{
  "name": "typeset",
  "version": "0.1.6",
  "description": "Typesetting for the web",
  "main": "src/index.js",
  "bin": {
    "typeset-js": "src/cmd.js"
  },
  "scripts": {
    "clean": "rm -rf build/",
    "test:node": "node_modules/mocha/bin/mocha -u bdd -R spec -t 500 --recursive",
    "test:browser": "echo not implemented yet",
    "test": "npm run test:node && npm run test:browser",
    "watch": "mocha src/ test/ -u bdd -R spec -t 500 --recursive --watch",
    "build:dev": "./node_modules/webpack/bin/webpack.js",
    "build:prod": "PROD=1 ./node_modules/webpack/bin/webpack.js",
    "prebuild": "npm run clean",
    "build": "npm run build:dev && npm run build:prod"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/davidmerfield/Typeset.js.git"
  },
  "keywords": [
    "type",
    "typeset",
    "typography",
    "dropcap",
    "smallcap",
    "hyphenation"
  ],
  "author": "David Merfield",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/davidmerfield/Typeset.js/issues"
  },
  "homepage": "https://github.com/davidmerfield/Typeset.js",
  "dependencies": {
    "cheerio": "^0.19.0",
    "commander": "^2.8.1",
    "html-entities": "^1.1.2",
    "hypher": "^0.2.3"
  },
  "devDependencies": {
    "chai": "^3.2.0",
    "html-minifier": "^0.7.2",
    "mocha": "^2.2.5",
    "webpack": "^1.11.0"
  }
}
